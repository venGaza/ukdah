<body class="is-preload">

    <!-- Page Wrapper -->
    <div id="page-wrapper">

        <!-- Main -->
        <article id="main">
            <header>
                <h2>User Options</h2>
                <!-- <p>Welcome to Ukdah administrator!</p> -->
            </header>
            <section class="wrapper style5">
                <div class="inner">
                    <section>
                        <p>User Information</p>
                        <form>
                            <b>First Name: </b> <input type="text" name="First_Name" placeholder="{{First_Name}}"> <br>
                            <b>Last Name: </b> <input type="text" name="Last_Name" placeholder="{{Last_Name}}"> <br>
                            <b>Email: </b> <input type="text" name="Email" placeholder="{{Email}}"> <br>
                            <b>Account Creation Date: </b> {{Date}} <br>
                            <b>Signature:</b><input type="file" accept="image/*"><br>
                            <button>Confirm</button>
                        </form> 
                    </section>

                    <section>
                        <p>Change Password</p>
                        <form>
                            <b>Old Password: </b><input type="text" name="Old_Password"> <br>
                            <b>New Password: </b><input type="text" name="New_Password"> <br>
                            <button>Confirm</button>
                        </form>
                    </section>
                </div>
            </section>
        </article>
    </div>
</body>