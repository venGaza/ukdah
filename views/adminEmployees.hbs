<body class="is-preload">

    <!-- Page Wrapper -->
    <div id="page-wrapper">

        <!-- Main -->
        <article id="main">
            <header>
                <h2>Ukdah User List (Admin)</h2>
                <p>List of users currently in the database</p>
            </header>
            <section class="wrapper style5">
                <div class="inner">
                    
                    <h4>Users</h4>
                    <div class="table-wrapper">
                        <table class="alt"> 
                            <thead class="thead-dark text-center">
                                <th>User ID </th> 
                                <th>First Name</th> 
                                <th>Last Name</th> 
                                <th>Email</th>
                                {{!-- <th>Password</th>
                                <th>Region</th> --}}
                                <th></th>
                                <th></th>
                                <th></th>      
                            </thead> 
                            
                            <tbody> 
                                {{#each users}}
                                <tr> 
                                    <td>{{User_ID}}</td> 
                                    <td>{{First_Name}}</td> 
                                    <td>{{Last_Name}}</td> 
                                    <td>{{Email}}</td>
                                    {{!-- <td>{{Password}}</td>
                                    <td>{{Region}}</td>> --}}
                                    <td><button class="button small primary" onclick="deleteUser({{User_ID}})">Delete</button></td>
                                    <td><a href="/user/{{empID}}">Update</a></td>
                                    <td><a href="/user/{{empID}}">Employees</a></td>
                                </tr>
                                {{/each}}  
                            </tbody>
                        </table>
                    </div>
                

                    <section>
                        <h4>Add user</h4>
                        <form method="post" action="/adminEmployees">
                            <div class="row gtr-uniform">
                                <div class="col-4 col-12-xsmall">
                                    <input type="text" name="fname" id="fname" value="" placeholder="First Name" />
                                </div>
                                <div class="col-4 col-12-xsmall">
                                    <input type="text" name="lname" id="lname" value="" placeholder="Last Name" />
                                </div>
                                <div class="col-4 col-12-xsmall">
                                    <input type="email" name="email" id="email" value="" placeholder="Email" />
                                </div>
                                <div class="col-6 col-12-xsmall">
                                    <input type="email" name="password" id="password" value="" placeholder="Password" />
                                </div>
                                <div class="col-6 col-12-xsmall"">
                                    <select name="user-region" id="user-region">
                                        <option value="">- Region -</option>
                                        {{#each regions}}
                                            <option value="{{regID}}">{{regName}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="col-4 col-12-small">
                                    <input type="radio" id="user-type-user" name="user-type" checked>
                                    <label for="user-type-user">User</label>
                                </div>
                                <div class="col-4 col-12-small">
                                    <input type="radio" id="user-type-admin" name="user-type">
                                    <label for="user-type-admin">Admin</label>
                                </div>
                                <div class="col-4 col-12-small">
                                    Signature <input type="file" id="userSignature" name="userSignature" accept="image/*">
                                </div>
                                <div class="col-12">
                                    <ul class="actions">
                                        <li><input type="submit" value="Add User" class="primary" /></li>
                                        <li><input type="reset" value="Reset" /></li>
                                    </ul>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </section>
        </article>
    </div>

    <script src="/static/javascripts/deleteUser.js"></script>
</body>